@model IEnumerable<CustomerRegistry.Application.DTOs.CustomerDTO>

@{
    ViewData["Title"] = "Customers Management";
}

<style>
    .modal-lg {
        max-width: 80%;
    }
</style>
<div>
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<form asp-action="GetByName" >
<div class="row">    
        <div class"col-lg-4 mb-4">           
           <partial name="_FormGetByName" />
            </div>
        </div>

        <div class="mt-3 col-lg-4">
            <div>
                <div class="pull-left">
                    <a asp-action="Create" class="btn btn-primary">
                        <span title="Register New" class="fa fa-plus"></span> Register New
                    </a>
                </div>
            </div>
        </div>      
</div>
</form>
<br />
<div class="container panel panel-default">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>             
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.CustomerId" title="Details" class="btn btn-primary ml-2">
                            <i class="fa-solid fa-circle-info"></i>
                        </a>

                        <a asp-action="Edit" asp-route-id="@item.CustomerId" title="Edit" class="btn btn-warning ml-2">
                            <span class="fa fa-edit"></span>
                        </a>


                        <a asp-action="Delete" asp-route-id="@item.CustomerId" title="Delete" class="btn btn-danger ml-2">
                            <span class="fa fa-trash-alt"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
